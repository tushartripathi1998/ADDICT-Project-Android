<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp">
        <LinearLayout
            android:id="@+id/aSec"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="clickOnA"
            android:paddingLeft="100px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/textA"
                android:id="@+id/totalA"
                android:text="0" />
            <TextView
                android:id="@+id/textA"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="A"
                android:textSize="70dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textA"
                android:id="@+id/countA"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/dSec"
            android:onClick="clickOnD"
            android:paddingLeft="100px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/textD"
                android:id="@+id/totalD"
                android:text="0" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="D"
                android:id="@+id/textD"
                android:textSize="70dp"
                android:layout_centerInParent="true"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textD"
                android:id="@+id/countD"
                android:text="0" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp">
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/d2Sec"
            android:onClick="clickOnD2"
            android:paddingLeft="100px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/textD2"
                android:id="@+id/totalD2"
                android:text="0" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="D"
                android:textSize="70dp"
                android:id="@+id/textD2"
               android:textAlignment="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textD2"
                android:id="@+id/countD2"
                android:text="0" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/iSec"
            android:onClick="clickOnI"
            android:paddingLeft="100px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/textI"
                android:id="@+id/totalI"
                android:text="0" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="I"
                android:textSize="70dp"
                android:id="@+id/textI"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textI"
                android:id="@+id/countI"
                android:text="0" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp">
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/cSec"
            android:onClick="clickOnC"
            android:paddingLeft="100px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/textI"
                android:id="@+id/totalC"
                android:text="0" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="C"
                android:textSize="70dp"
                android:id="@+id/textC"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textC"
                android:id="@+id/countC"
                android:text="0" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/tSec"
            android:onClick="clickOnT"
            android:paddingLeft="100px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/textT"
                android:id="@+id/totalT"
                android:text="0" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="T"
                android:id="@+id/textT"
                android:textSize="70dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textI"
                android:id="@+id/countT"
                android:text="0" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>